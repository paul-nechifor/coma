<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_background"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/route_padding" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_location_from"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_setting_size" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/map_border_color"
            android:padding="@dimen/route_locations_map_padding" >

            <ImageView
                android:id="@+id/fromMapIv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/route_locations_map_size"
                android:background="@color/basic_background"
                android:contentDescription="@string/desc_location_from" />
        </FrameLayout>

        <TextView
            android:id="@+id/fromAddressTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_setting_size" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/route_padding"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_location_to"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_setting_size" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/map_border_color"
            android:padding="@dimen/route_locations_map_padding" >

            <ImageView
                android:id="@+id/toMapIv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/route_locations_map_size"
                android:background="@color/basic_background"
                android:contentDescription="@string/desc_location_to" />
        </FrameLayout>

        <TextView
            android:id="@+id/toAddressTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_setting_size" />
    </LinearLayout>

</LinearLayout>