<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
	<LinearLayout
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/itemTextSettingTv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/setting_vertical_padding"
	        android:paddingRight="@dimen/setting_vertical_padding"
	        android:paddingTop="@dimen/text_setting_horizontal_padding"
	        android:textSize="@dimen/text_setting_size"
	        android:background="@color/setting_item_backgroud"
	        android:textIsSelectable="false" />
	    
	    <TextView
	        android:id="@+id/itemTextSettingValueTv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/setting_item_backgroud"
	        android:paddingBottom="@dimen/text_setting_horizontal_padding"
	        android:paddingLeft="@dimen/setting_vertical_padding"
	        android:paddingRight="@dimen/setting_vertical_padding"
	        android:textColor="@color/text_setting_small_color"
	        android:textIsSelectable="false"
	        android:textSize="@dimen/text_setting_small_size" />
	
	</LinearLayout>
	
    <com.facebook.widget.ProfilePictureView
            android:id="@+id/selection_profile_pic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/setting_vertical_padding"
            facebook:preset_size="small" />

</LinearLayout>